<% form_tag '/posts/create' do %>
	<p>
	Which blog?: <br />
	<%=  text_field_tag 'url', @the_url, :size => 100 %>
	</p>
	<p>
	From: <br />
	<%= collection_select(:post, :origin_id, @languages, :id, :language, {:selected => "1"}) %>
	</p>
	<p>
	To: <br />
	<%= collection_select(:post, :ted_id, @languages, :id, :language) %>
	</p>
	<p>
	<%= submit_tag 'Submit' %>
	</p>
<% end %>

<p>
<strong>Hey BLOGGERS! You can now ask your users to translate your blogs to different language.<br />
       	Just copy and paste this javascript code on your site: <%= copy_translate_me_js_to_clipboard %>
</strong>
</p>

<h2>Translated Articles</h2>
<%= render :partial => @posts %>

