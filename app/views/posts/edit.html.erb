<div id = "edit">
<h1>Translate </h1>
<% form_for @post do |f| %>
	<p>
	Title: <%= f.text_field :title %>
	</p>
	<p>
	Content: <br />
	<%= f.text_area :content, :cols => 60, :rows => 100, :class => 'rich_text_editor' %>
	</p>
	<p>
	<%= submit_tag 'Update' %>
	</p>
<% end %>
</div>

<div id = "original">
<h1> Original </h1>
<p>
Title: <%= @post.versions.earliest.title %>
</p>
<p>
Content: <br />
<%= @post.versions.earliest.content %>
</p>
</div>
