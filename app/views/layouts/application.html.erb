<div id="search">
<p>
<% form_tag(search_path) do %> 
  <%= text_field_tag 'query' %>
  <%= submit_tag 'Search for an article' %>
<% end %>
</p>
</div>
<% unless flash[:error].blank? %>
  <div id="notification"><strong><em><%= flash[:error] %></em></strong></div>
<% end %>
</div> <!-- end of header div -->
<div id = "main">
<%= yield %>
</div>
